{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Settings for JavaScript libraries",
  "packageRules": [
    {
      "description": "@types/node + @tsconfig/node**: group dependencies",
      "matchDatasources": [
        "npm"
      ],
      "matchPackageNames": [
        "@types/node",
        "@tsconfig/node**"
      ],
      "groupName": "@types/node"
    },

    {
      "description": "@octokit/plugin-request-log: group dependencies",
      "matchDatasources": [
        "npm"
      ],
      "matchPackageNames": [
        "@octokit/plugin-request-log"
      ],
      "groupName": "@octokit/plugin-request-log"
    },
    {
      "description": "@octokit/plugin-retry: group dependencies",
      "matchDatasources": [
        "npm"
      ],
      "matchPackageNames": [
        "@octokit/plugin-retry"
      ],
      "groupName": "@octokit/plugin-retry"
    },
    {
      "description": "@octokit/plugin-throttling: group dependencies",
      "matchDatasources": [
        "npm"
      ],
      "matchPackageNames": [
        "@octokit/plugin-throttling"
      ],
      "groupName": "@octokit/plugin-throttling"
    }
  ]
}
