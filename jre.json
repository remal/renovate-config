{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": ["Settings for Java projects"],
  "extends": ["github>remal/renovate-config:global"],

  "java": {
    "packageRules": [
      {
        "packageNames": ["com.google.guava:guava"],
        "allowedVersions": "/^\\d+(\\.\\d+)+-jre$/"
      },
      {
        "packageNames": ["org.postgresql:postgresql"],
        "allowedVersions": "!/.+-jre\\d*$/"
      }
    ]
  }
}
