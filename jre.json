{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": ["Settings for JRE projects"],
  "extends": [
    "github>remal/renovate-config:global"
  ],

  "java": {
    "packageRules": [
      {
        "description": "Allow only versions with 'jre' suffix",
        "packageNames": ["com.google.guava:guava"],
        "allowedVersions": "/^\\d+(\\.\\d+)+-jre$/"
      },
      {
        "description": "Deny versions with 'jre*' suffix",
        "packageNames": ["org.postgresql:postgresql"],
        "allowedVersions": "!/.+-jre\\d*$/"
      }
    ]
  }
}
