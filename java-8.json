{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Settings for projects that support Java 8",

  "packageRules": [
    {
      "description": "Mockito >=5 supports Java >=11",
      "matchLanguages": [
        "java"
      ],
      "matchCategories": [
        "java"
      ],
      "packagePatterns": [
        "^org\\.mockito[.:]"
      ],
      "matchCurrentVersion": "(,4.9999)",
      "allowedVersions": "(,4.9999)"
    },
    {
      "description": "JGit >=6 supports Java >=11",
      "matchLanguages": [
        "java"
      ],
      "matchCategories": [
        "java"
      ],
      "matchPackagePatterns": [
        "^org\\.eclipse\\.jgit[.:]"
      ],
      "matchCurrentVersion": "(,5.9999)",
      "allowedVersions": "(,5.9999)"
    }
  ]
}
