{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Settings for all projects",

  "extends": [
    "config:base",
    "group:recommended",
    "github>whitesource/merge-confidence:beta",
    "github>remal/renovate-config:labels",
    "github>remal/renovate-config:java-deps",
    "github>remal/renovate-config:broken-java-deps"
  ],

  "onboarding": false,
  "configWarningReuseIssue": false,

  "stabilityDays": 1,
  "prCreation": "not-pending",

  "separateMultipleMajor": true,
  "separateMajorMinor": true,
  "separateMinorPatch": true,

  "transitiveRemediation": true,
  "semanticCommits": "disabled",
  "rollbackPrs": false,
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0,
  "updateInternalDeps": true,

  "assigneesFromCodeOwners": true,
  "assigneesSampleSize": 1,
  "reviewersFromCodeOwners": true,
  "reviewersSampleSize": 1,

  "dependencyDashboard": false,
  "dependencyDashboardAutoclose": true,
  "dependencyDashboardTitle": "Renovate dependency updates",
  "dependencyDashboardLabels":["dependencies"],

  "docker": {
    "pinDigests": true
  },

  "gitIgnoredAuthors": [
    "mergify[bot]@users.noreply.github.com"
  ],
    
  "hostRules": [
    {
      "timeout": 30000
    }
  ]
}
